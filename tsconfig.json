{
    "compilerOptions": {
        "target": "ES6",
        "module": "ES6",
        "outDir": "./dist",
        "rootDir": "./src",
        "allowSyntheticDefaultImports": true,
        "allowImportingTsExtensions": true,
        "noEmit": true,
        "noImplicitAny": false,
        "typeRoots": ["src/types", "./node_modules/@types"],
        "moduleResolution": "node",
        "baseUrl": "./",
        "paths": {
            "*": ["dist/*"],
        }
    },
    "include": [
      "src/**/*.ts",
    ],
    "exclude": [
      "node_modules"
    ],
    "ts-node": {
      "esm": true,
    } 
}
